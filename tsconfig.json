{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "outDir": "./dist/", // 打包到的目录
    "sourceMap": false, // 是否生成sourceMap（用于浏览器调试）
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "Node",
    "module": "ESNEXT",
    "target": "es5", // 转化成的目标语言
    "baseUrl": "./",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["*.test.ts"]
}
